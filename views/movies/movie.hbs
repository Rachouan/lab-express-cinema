<section class="py-3 py-md-5">
    <div class="container" style="max-width: 900px;">
        <div class="row">
            <aside class="col-12 col-md-4 text-center">
                 <img src="{{movie.image}}" class="w-100 rounded" style="max-width: 300px;"/>
            </aside>
            <article class="col-12 col-md-8">
                <a href="/movies" class="link text-muted text-decoration-none">< Go Back</a>
                <h1 class="mt-3">{{movie.title}}</h1>
                <h2 class="h5 text-muted">Directed by {{movie.director}}</h2>
                <div class="mt-3 border-top">
                    <ul class="list-group list-group-flush">
                        {{#each movie.stars}}
                        <li class="list-group-item">{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
                <div class="border-top">
                    <p class="py-3">{{movie.description}}</p>
                </div>
                <div>
                    <p class="text-muted">{{#each movie.showtimes}}{{this}} | {{/each}}</p>
                </div>
            </article>
        </div>
    </div>
</section>